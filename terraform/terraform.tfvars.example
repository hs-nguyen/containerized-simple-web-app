# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

# AWS Region
aws_region = "ap-southeast-1"

# Environment
environment = "dev"

# VPC Configuration
azs = ["ap-southeast-1a", "ap-southeast-1b"]
cidr = "10.0.0.0/16"
public_subnets = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnets = ["10.0.3.0/24", "10.0.4.0/24"]
name = "simple-web-app-vpc"

# EC2 Configuration
ami = "ami-0c02fb55956c7d316"  # Update with your preferred AMI ID
instance_type = "t3.micro"
key_pair_name = "your-key-pair-name"  # Update with your key pair name

# Security Configuration
allowed_ssh_cidr = "YOUR_IP/32"  # Replace with your IP address for SSH access